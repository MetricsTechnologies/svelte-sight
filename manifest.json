{
  "name": "Svelte Sight",
  "version": "0.9",
  "description": "Svelte component hierarchy, state, and props visualizer",
  "content_security_policy":"script-src 'self' https://d3js.org/d3.v5.min.js; object-src 'self'",
  "permissions": [
    "tabs",
    "activeTab", 
    "<all_urls>"
  ],
  "background": {
    "scripts": ["extension/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["extension/contentscript.js"]
    }],
  "devtools_page": "extension/devtools.html",
  "browser_action": {
    "default_icon": {
      "16": "extension/assets/ss-logo-16.png",
      "32": "extension/assets/ss-logo-32.png",
      "48": "extension/assets/ss-logo-48.png",
      "128": "extension/assets/ss-logo-128.png"
    }
  },
  "icons": {
    "16": "extension/assets/ss-logo-16.png",
    "32": "extension/assets/ss-logo-32.png",
    "48": "extension/assets/ss-logo-48.png",
    "128": "extension/assets/ss-logo-128.png"
  },
  "manifest_version": 2
}